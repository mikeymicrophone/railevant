<h1>conceptualize something</h1>

<%= error_messages_for :concept %>

<% form_for(@concept) do |f| %>
  <p>
    <b>type</b><br />
    <%= select :class, :name, @types %>
  </p>

  <p>
    <b>content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <b>character</b><br />
    <%= f.text_area :character %>
  </p>

  <p>
    <b>railser</b><br />
    <%= f.select :railser_id, Railser.find(:all).map { |r| [r.name, r.id] } %>
  </p>

  <p>
    <%= f.submit "ready" %>
  </p>
<% end %>

<%= link_to 'Back', concepts_path %>
